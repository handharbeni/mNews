<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/relatedView"
    android:padding="@dimen/sepuluh_dp"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:background="@drawable/drawable_rounded_grey"
        android:id="@+id/imgRelated"
        android:layout_width="110dp"
        android:layout_height="110dp" />
    <LinearLayout
        android:padding="@dimen/sepuluh_dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginBottom="4dp"
            android:text="Title Related"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/txtTitleRelated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Tanggal Related"
            android:textSize="11sp"
            android:id="@+id/txtTanggalRelated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>